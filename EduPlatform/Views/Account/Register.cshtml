@model EduPlatform.ViewModels.RegisterModel; 

@{
}

<div class="container">
    <div class="col-6 offset-3">
        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div>
                    <label asp-for="FirstName">Enter First Name</label><br />
                    <input type="text" asp-for="FirstName" style="border-radius : 100px" />
                    <span asp-validation-for="FirstName" />
                </div>
                <div>
                    <label asp-for="MiddleName">Enter Middle Name</label><br />
                    <input type="text" asp-for="MiddleName" style="border-radius : 100px" />
                    <span asp-validation-for="MiddleName" />
                </div>
                <div>
                    <label asp-for="LastName">Enter Last Name</label><br />
                    <input type="text" asp-for="LastName" style="border-radius : 100px" />
                    <span asp-validation-for="LastName" />
                </div>
                <div>
                    <label asp-for="Age">Enter Age</label><br />
                    <input type="number" asp-for="Age" style="border-radius : 100px" />
                    <span asp-validation-for="Age" />
                </div>
                <div>
                    <label asp-for="Img">Enter Image</label><br />
                    <input type="text" asp-for="Img" style="border-radius : 100px" />
                    <span asp-validation-for="Img" />
                </div>
                <div>
                    <label asp-for="PhoneNumber">Enter Phone Number</label><br />
                    <input type="text" asp-for="PhoneNumber" style="border-radius : 100px" />
                    <span asp-validation-for="PhoneNumber" />
                </div>

                <div>
                    <label asp-for="Email">Enter Login</label><br />
                    <input type="text" asp-for="Email" style="border-radius : 100px" />
                    <span asp-validation-for="Email" />
                </div>
                <div>
                    <label asp-for="Password">Enter password</label><br />
                    <input asp-for="Password" style="border-radius : 100px" />
                    <span asp-validation-for="Password" />
                </div>
                <div>
                    <label asp-for="ConfirmPassword">Repeate password</label><br />
                    <input asp-for="ConfirmPassword" style="border-radius : 100px" />
                    <span asp-validation-for="ConfirmPassword" />
                </div>
                <div>
                    <input type="submit" value="Register" class="btn btn-outline-success" style="border-radius : 100px" />
                </div>
            </div>
        </form>
    </div>
</div>