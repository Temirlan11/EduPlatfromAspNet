@model EduPlatform.ViewModels.LoginModel;

@{
}

<div class="container">
    <div class="col-5 offset-3">
        <form class="offset-3" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <label asp-for="Email">Enter Login</label>
                    <input type="text" asp-for="Email"  style="border-radius : 100px" />
                    <span asp-validation-for="Email" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"  style="border-radius : 100px">Enter Password</label>
                    <input asp-for="Password" style="border-radius : 100px"/>
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-outline-success offset-3" style="border-radius : 100px" />
                </div>
            </div>
        </form>
    </div>
</div>
