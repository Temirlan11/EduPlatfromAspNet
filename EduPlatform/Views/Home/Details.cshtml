<div class="jumbotron p-3 p-md-7 text-white rounded bg-dark">
    <div class="row mb-2">
        <form  asp-action="BuyCourse" asp-controller="Home" asp-anti-forgery="true">
            <div class="col-md-6 px-0">
                <input type="hidden" name="id" value="@Model.Id" />
                <h1 class="display-4 font-italic">@Model.CourseName</h1>
                <p class="lead my-3">@Model.Description</p>
                <p class="lead mb-0"><a href="#" class="text-white font-weight-bold">Price: @Model.Price$</a></p>
                <p class="lead mb-0">Added Date: @Model.AddedDate</p>
                <div class="btn-group">
                    <button type="submit" style="border-radius: 100px;" class="btn btn-sm btn-outline-success mt-2">BUY COURSE</button>
                </div>
            </div>
        </form>

        <div class="col-md-4 px-0">
            <img class="card-img-top" src="@Model.Img" style="width: 100%; height: 40vh; object-fit: cover;" alt="Card image cap">
        </div>
    </div>
</div>

    <div class="row mb-2">
        <div class="col-md-6">
            <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <strong class="d-inline-block mb-2 text-primary">World</strong>
                    <h3 class="mb-0">
                        <a class="text-dark" href="#">Featured post</a>
                    </h3>
                    <div class="mb-1 text-muted">Nov 12</div>
                    <p class="card-text mb-auto">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
                    <a href="#">Continue reading</a>
                </div>
                <img class="card-img-right flex-auto d-none d-lg-block" data-src="@Model.Img" alt="Card image cap">
            </div>
        </div>
        <div class="col-md-6">
            <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <strong class="d-inline-block mb-2 text-success">Design</strong>
                    <h3 class="mb-0">
                        <a class="text-dark" href="#">Post title</a>
                    </h3>
                    <div class="mb-1 text-muted">Nov 11</div>
                    <p class="card-text mb-auto">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
                    <a href="#">Continue reading</a>
                </div>
                <img class="card-img-right flex-auto d-none d-lg-block" data-src="holder.js/200x250?theme=thumb" alt="Card image cap">
            </div>
        </div>
    </div>
</div>

